@using System.Data
@using FP.Manager
@{
    DataTable dt = new DataTable();
    dt = Model;
}
<link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet">
<style>
        body {
            font-family: "Poppins", sans-serif;
            font-weight: 400;
            color: #000;
            -webkit-print-color-adjust: exact !important;
        }

        h3,
        h2,
        h1 {
            margin: 0px;
        }

        p {
            font-size: 12px;
            margin: 3px 0;
            color: #000;
        }

        .form-design {
            margin: auto;
            max-width: 1200px;
            color: #000;
        }

        .form-design h3 {
            text-align: right;
            font-size: 13px;
        }

        .form-design h2 {
            text-align: center;
            font-size: 15px;
        }

        .form-design h1 {
            text-align: center;
            font-size: 19px;
            margin-top: 8px;
        }

        .form-design h1 span {
            padding: 4px 25px;
            border-radius: 30px;
            background: #333333;
            color: #fff;
            font-weight: 500;
        }

        table tr td {
            color: #000 !important;
            font-size: 12px;
            padding: 1px 5px;
        }

        .form-flex {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .b1,
        .b2,
        .b3 {
            flex: 1;
        }

        .bgr {
            background: #E4E6DC;
            font-weight: 500;
        }

        @@media print {
            table tr td {
                font-size: 10px;
                font-weight: 300;
                color: #333;
            }
        }
</style>

@if (dt.Rows.Count > 0)
{
    foreach (DataRow dr in dt.Rows)
    {


